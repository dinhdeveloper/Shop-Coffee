<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="dinhtc.android.xml.view.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/homeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/homeFragment_to_cartBagFragment"
            app:destination="@id/cartBagFragment" />
    </fragment>

    <fragment
        android:id="@+id/productDetailFragment"
        android:name="dinhtc.android.xml.view.fragment.ProductDetailFragment"
        android:label="ProductDetailFragment"
        tools:layout="@layout/fragment_product_detail">
        <action
            android:id="@+id/productDetailFragment_to_cartBagFragment"
            app:destination="@id/cartBagFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartBagFragment"
        android:name="dinhtc.android.xml.view.fragment.CartBagFragment"
        android:label="CartBagFragment"
        tools:layout="@layout/fragment_cart_bag" />


    <fragment
        android:id="@+id/menuFragment"
        android:name="dinhtc.android.xml.view.fragment.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="dinhtc.android.xml.view.fragment.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/hearFragment"
        android:name="dinhtc.android.xml.view.fragment.HearFragment"
        android:label="HearFragment"
        tools:layout="@layout/fragment_hear" />


    <fragment
        android:id="@+id/profileFragment"
        android:name="dinhtc.android.xml.view.fragment.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />


</navigation>